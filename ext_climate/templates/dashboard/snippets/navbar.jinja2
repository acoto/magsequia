{% extend_me %}

{% block nav_links_extra %}
    {% if activeProject.is_climate == 1 %}
        <li {% if activeMenu == 'myCustomMenu' %}class="active" {% endif %}>
            <a href="{{ request.route_url('plugin_myprivateview',userid=activeUser.login) }}"><i
                    class="far fa-thumbs-up"></i> <span class="nav-label">{{ _('MAG Sequia') }}</span></a>
        </li>
        <li {% if activeMenu == 'myCustomMenu' %}class="" {% endif %}>
            <a href="{{ request.url_for_static('template_sequia.zip',"climate") }}"><i
                    style="margin-left: 10px" class="fas fa-download"></i> <span
                    class="nav-label">{{ _('Descargar template de sequia') }}</span></a>
        </li>
    {% endif %}
{% endblock %}


