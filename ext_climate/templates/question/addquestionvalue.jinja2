{% extends 'dashboard/dashboard.jinja2' %}

{% block title %}
    <title>ClimMob | Add question options </title>
{% endblock title %}


{% block bodyattributes %} style="background:#f8fafb" {% endblock bodyattributes %}

{% block body %}
    <div class="row" style="height: 100%">
        <div class="col-lg-12 " style="height: 100%">
            <div class="ibox float-e-margins" style="height: 100%; margin-bottom: 0px">
                <div class="ibox-title">
                    <h5>Add option to question "{{ qdata.question_desc }}"</h5>
                    <div class="ibox-tools">
                        <button type="button" onclick="location.href='{{ request.route_url('questionvalues', qid=qid) }}';" class="btn btn-default btn-xs pull-right">Go back</button>
                    </div>
                </div>
                <div class="ibox-content" style="height: 89%">
                    {% snippet 'snippets/error.jinja2', error_summary=error_summary %}
                    <div class="middle-box animated fadeInRightBig" style="max-width: 500px">
                        <div class="error-desc">
                            <form class="form-horizontal" role="form" method="post" action="{{ request.path }}">

                                {% snippet 'snippets/question/values/option-form.jinja2', formdata=formdata,request=request,showid=true %}
                                <div class="text-center">
                                    <button class="btn btn-primary" type="submit" name="btn_add_group"> {{ _('Add') }}</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock body%}